#!/bin/bash - 
#date: 07/17/2023
### the intent of this Program is to output system information page 
### you can edit the template below as you wish to output stuff 
### from your system



# variables declaration
TITLE="page generated by host: $HOSTNAME"
DATE="$(date +"%x %r %Z")"
TIMESTAMP="current page provided by $USER at: $DATE"

# function spaces
		report_uptime () {
		echo "report feedback: function report_uptime running..."
		      #cat <<- _EOF_
		      #<h2>System Uptime</h2>	
		      #<pre>$(uptime)</pre>
		      # _EOF_
		 return
			}

		report_disk_space () {
		echo "report feedback: function report_disk_space running.."
			#cat <<- _EOF_
			#<h2>Disk Usage</h2>
			# <pre>$(df -h)</pre>
			# _EOF_
		  return
			}

	
		report_home_space () {
		echo "report feedback: function report_home_space running..."
			#cat <<- _EOF_
			#<h2>Home Space Utilization</h2>
			#<pre>$(du -sh /home/*)</pre>
			#_EOF_
		   return
			}




### Main program starts here

 cat << _EOF_
<html>
 	  <head>
 		<title>error guy</title>
 	  </head>
 	  <body>
 		<h1>Hello world... Im an error</h1>
		<p>$TIMESTAMP</p>
		<p>$(report_uptime)</p>
		<p>$(report_disk_space)</p>
		<p>$(report_home_space)</p>
 	  </body>
</html>
_EOF_
